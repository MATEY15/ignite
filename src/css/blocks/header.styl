.header
 position relative
 padding-bottom 115px
 
 .flex-container
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between
  min-height 75px

.top-line
 position absolute
 top 0
 left 0
 width 100%
 padding-top 16px
 min-height: 110px
 z-index 100
 // background #e3e

.logo-link
 display inline-block
 img
  // width 198px

.burger-menu
 display flex
 flex-direction column
 width 24px
 height 20px
 text-decoration none
 margin 36px 0 0 40px
 display none
 span
  display inline-block
  width 100%
  height 2px
  background #5a5a5b
  &:not(:last-child)
   margin-bottom 4px

.top-menu--wrapper
 flex-grow 1
 padding-left 120px
 padding-top 50px

.top-menu
 display flex
 flex-direction row
 li
  position relative
  &:not(:last-child)
   margin-right 81px
  a
   color: #52565f
   font-family: fbb
   font-size: 25px
   text-decoration none

.contact-head
 padding-top 20px
 display flex
 align-items center
 margin-right -206px
 a:not(:first-child)
  margin-left 106px
 .phone-link
  display flex
  align-items center
  font-family: fbh
  font-size: 29px
  line-height: 32px
  text-transform: uppercase
  color #fff
  color #ffffff
  text-decoration none
  
  & .icon-phone
   margin-right 8px
 
 .email-link
  display flex
  align-items center
  color: #3c3c3c
  font-family: fbh
  font-size: 21px
  line-height: 32px
  text-decoration none
  
  .icon-email
   margin-right 10px


// Header content

.header-content

 .container
  display flex

.text-head
 padding-top 462px
 max-width 600px

 h1
  color: #5a5a5b
  font-family: fbh
  font-size: 80px
  font-weight: 400
  line-height: 1
  span
   color: #fdb414
 
 p
  color: #828282
  font-family: fbb
  font-size: 32px
  font-weight: 400
  line-height: 1.5
  margin-top 48px
  max-width 450px
 
 .button
  margin-top 60px
 
 .social-list
  margin-top 108px
 
.social-list
 position relative
 &:before
  position absolute
  top 28px
  right calc(100% + 14px)
  display block
  content ''
  width 220px
  height 2px
  background #B2B2B2
 ul
  display flex
 li
  &:not(:last-child)
   margin-right 15px
 a
  display flex
  align-items center
  justify-content center
  width 60px
  height 60px
  border 2px solid #B2B2B2
  brr(50%)
  trn(.2s)
  &:hover
   border 2px solid #FDB414
   svg
    fill #FDB414
    transform scale(1.1)
 svg
  height 24px
  fill #B2B2B2
  trn(.2s)

.background-head
 position relative
 display flex
 flex 1
 justify-content flex-end
 .background-head--position
  position relative
  display inline-block
  margin-right -90px
 .background-head--main
  display block
  margin-left auto
 .background-head--line
  position absolute
  top 30px
  left 50%
  tt(-50%, 0)

.text-line
 position absolute
 left 0
 bottom 20%
 &:before
  position absolute
  top 0
  display block
  content ''
  width 20px
  height 20px
  brr(50%)
  background #FDB414
 p
  color: #595959
  font-family: fbb
  font-size: 26px
 &.text-line--one
  bottom 31%
  left -13%
  width 165px
  &:before
   top 8px
   right -34px
  p
   text-align right
 &.text-line--two
  bottom 7%
  left 3%
  width 150px
  &:before
   top 8px
   right -60px
  p
   text-align right
 &.text-line--three
  bottom -5%
  left 50%
  width 185px
  text-align center
  tt(-50%, 0)
  &:before
   top -45px
   left 50%
   tt(-50%, 0)
 &.text-line--four
  bottom 11%
  left 87%
  width 155px
  &:before
   top 5px
   left -38px