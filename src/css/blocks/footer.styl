.footer
	position absolute
	left 0
	bottom 0
	width 100%
	min-height: 1260px
	background: rgb(157,157,158)
	background: linear-gradient(90deg, rgba(157,157,158,1) 0%, rgba(90,90,91,1) 100%)
	padding 740px 0 0px
	overflow hidden

	&:before
		position: absolute
		bottom: 64%
		width: 3000px
		left: 50%
		height: 1800px
		display: block
		content: ''
		background: #ebe4d7
		brr(50%)
		transform: translate(-50%, 0)
	&:after
		position: absolute
		bottom: 70%
		width: 3000px
		left: 50%
		height: 1600px
		display: block
		content: ''
		background: #ffffff
		brr(50%)
		transform: translate(-50%, 0)

	.flex-container
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		padding-left 72px !important
		padding-right 72px !important

	.col-md-05
		// width 20%

.logo-footer
	display inline-block

.list-footer
	h4
		color: #ffffff
		font-family: fbh
		font-size: 26px
		line-height 35px
		font-weight: 300
		margin-bottom 30px
	ul
		li
			&:not(:last-child)
				margin-bottom 17px
		a
			display flex
			align-items center
			color: #efefef
			font-family: fp
			font-size: 19px
			font-weight: 400
			text-decoration none
		.icon-link
			width 26px
			display inline-block
			text-align center
			margin-right 18px

.copy-foot
	position relative
	margin-top 170px
	border-top 2px solid #a2a2a2
	text-align center
	padding 44px 0 46px
	color: #cacaca
	font-family: fp
	font-size: 17px
	font-weight: 400