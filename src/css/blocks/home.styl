.section-partner
  padding-top 120px
  padding-bottom 120px

.partner-wrapper
  display flex
  flex-direction: row
  flex-wrap wrap
  justify-content space-between

.section-information
  padding-top 50px
  .info-items
    &:nth-child(odd)
      .info-items--text
        margin-left 90px
    &:nth-child(even)
      .info-items--text
        margin-left 55px
  .container
    max-width 1864px

.info-items
  display flex
  padding 50px 0

  .col-md-6
    width 50%
  
.info-items--images
  position relative
  .info-background
    position absolute
  .info--images
    position relative

.info-items--text
  display flex
  flex-direction column
  justify-content center
  height 100%
  max-width 790px
  padding-bottom 25px
  h3
    color: #5a5a5b
    font-size 52px
    text-transform uppercase
    font-weight 300
    line-height 1.4
  
  p
    // max-width 790px
    font-size 27px
    font-family fp
    line-height 1.5
    color: #828282
    margin-top 32px
.section-information
  padding-bottom 230px

// Referrals

.section-referrals
  padding 80px
  min-height: 300px
  background-color: #f67b35

.referrals-wrapper
  display flex

.referrals-button
  width 40%
.referrals-text
  width 60%

.referrals-text
  display flex
  align-items center
  img
    margin-right 26px
  p
    color: #ffffff
    font-family: fbh
    font-size: 57px

.referrals-button
  display flex
  align-items center
  .button
    margin-left auto


// Case

.section-case
  padding-top 110px
  padding-bottom 150px

  .container
    max-width: 2060px
    position: relative
    left: 115px

.slider-case
  .slick-dots
    display flex
    margin-top 42px
    li
      &:not(:last-child)
        margin-right 16px
      &.slick-active
        button
          background #F9813D
      button
        font-size 0
        width 72px
        height 6px
        background #C6C6C6
        brr(5px)

.case-items
  display flex !important

.case-images
  width 55%
  img
    max-width 100%

.case-text
  display flex
  flex-direction column
  justify-content center
  width 45%

  span
    display inline-block
    color: #f67b35
    font-family: fbh
    font-size: 38px
    font-weight: 400
    text-transform uppercase
    margin-bottom 42px
  
  h3
    color: #636363
    font-family: fbh
    font-size: 61px
    font-weight: 400
    margin-bottom 54px
  p
    color: #6f6f6f
    font-family: fbb
    font-size: 32px
    font-weight: 400

// About

.section-about
  position relative
  background-repeat no-repeat !important
  min-height 200px
  overflow hidden
.about-text
  max-width 790px
.about-wrapper
  position relative
  display flex
  flex-direction column
  justify-content center
  align-items flex-start
  width 67%
  height 100%
  margin-left auto
  background url(../img/about-text.png)
  padding-left 330px
  padding-bottom 44px
  &:before
    position absolute
    left 100%
    top 0
    height 100%
    width 2500px
    content ''
    background #FA981C
  @media screen and (min-width: 2560px)
    min-height 1030px
  
  h3
    color: #ffffff
    font-family: fbh
    font-size: 67px
    font-weight: 400
    margin-bottom 44px
  p
    color: #ffffff
    font-family: fp
    font-size: 27px
    line-height 1.5
    &:not(:last-child)
      margin-bottom 24px
  
  .button
    margin-top 70px

// Number

.section-number
  padding-top 105px

.number-wrapper
  display flex
  align-items center
  min-height 370px
  background: rgb(255,194,49)
  background-image: url(../img/number-background.png), linear-gradient(90deg, rgba(255,194,49,1) 0%, rgba(236,102,34,1) 100%)
  background-size cover
  background-position center bottom
  brr(20px)
  box-shadow: 6px 6px 8px 4px rgba(0, 0, 0, 0.15)
  .number-items
    width calc(100% / 3)
    text-align center
    h3
      color: #ffffff
      font-family: fbh
      font-size: 96px
      font-weight: 400
    p
      color: #ffffff
      font-family: fbb
      font-size: 40px
      font-weight: 400

// Contact

.section-contact
  position relative
  min-height: 400px
  max-height: 400px
  z-index 100

.contact-wrapper
  max-width 1400px
  box-shadow: 0 0 24px rgba(0, 0, 0, 0.09)
  background-color: #ffffff
  margin 110px auto 0
  padding 100px 100px 82px
  brr(20px)
  .col-md-6
    width 50%
  .col-md-12
    width 100%
  .col-md-6,
  .col-md-12
    padding 0 15px
  form
    position relative
    display flex
    flex-wrap wrap
  
  input, textarea
    background #F8F6F2
    // background #333
    width 100%
    padding 20px 50px
    brr(50px)
    margin-bottom 20px
    min-height 76px
    color: #737373
    font-family: fbb
    font-size: 22px
    font-weight: 300

    &::-webkit-input-placeholder
      color: #737373
      font-family: fbb
      font-size: 22px
      font-weight: 300
    &::-moz-placeholder
      color: #737373
      font-family: fbb
      font-size: 22px
      font-weight: 300
    &:-ms-input-placeholder
      color: #737373
      font-family: fbb
      font-size: 22px
      font-weight: 300
    &:-moz-placeholder
      color: #737373
      font-family: fbb
      font-size: 22px
      font-weight: 300
  
  textarea
    min-height: 174px
    brr(25px)

.contact-heading
  max-width 826px
  text-align center
  margin 0 auto 65px
  h3
    color: #5a5a5b
    font-family: fbh
    font-size: 55px
    font-weight: 400
    margin-bottom 22px
  p
    color: #737373
    font-family: fbb
    font-size: 25px
    font-weight: 300
    line-height 1.4

.contact-button
  text-align center
  width 100%
  padding 0 15px
  padding-top 20px