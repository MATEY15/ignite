.button
	display inline-block
	min-width 310px
	min-height 83px
	text-align center
	c #ffffff
	background #fdb414
	box-shadow: 0 0 32px rgba(253, 180, 20, 0.39)
	font-family fbh
	font-size: 24px
	text-transform: uppercase
	text-decoration none
	border-radius 50px
	cursor pointer
	transition all .25s ease-out
	user-select none
	padding 28px 15px
	&:hover
		background: #F0513C
	@media screen and (max-width: 2500px)
		min-height 58px
		min-width 215px
		font-size 18px
		padding 18px 15px
	
	&.button-white
		box-shadow: 0 0 49px rgba(0, 0, 0, 0.12)
		background: #ffffff
		color #fa981c
		&:hover
			background #fdb414
			box-shadow: 0 0 32px rgba(253, 180, 20, 0.39)
			color #ffffff


.button-referral
	display flex
	align-items center
	justify-content center
	font-size 28px
	font-family fbb
	padding 40px 20px
	min-width 490px
	min-height 114px
	box-shadow: 0 0 16px rgba(0, 0, 0, 0.11)
	background: #feb118
	brr(75px)
	img
		margin-left 10px

		