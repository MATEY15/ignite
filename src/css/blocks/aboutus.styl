.section-work
  background #f7f7f7
  padding-top 95px
  padding-bottom 165px
  .container
    max-width 1880px

.work-heading
  margin-bottom 100px
  h3
    color: #58585a
    font-family:fbh
    font-size: 61px
    line-height: 70px
    span
      font-family fbb
      font-weight: 300
.work-wrapper
  position relative
  display flex
.work-item--icon
  // position absolute
  // top 50%
  // left 50%
  // tt(-50%, -50%)
.work-item--col
  display flex
  flex-direction: column
  justify-content space-between
  padding-top 55px
  padding-bottom 100px
  &.work-item--left
    .work-item-icon
      margin-left 40px
    .work-item-text
      text-align: right
    .work-item
      &:first-child
        transform translate(60px, 0)
      &:last-child
        transform translate(-40px, 0)
  &.work-item--right
    .work-item-icon
      margin-right 40px
    .work-item-text
      text-align: left
    .work-item
      flex-direction row-reverse
      &:first-child
        transform translate(-60px, 0)
      &:last-child
        transform translate(40px, 0)
.work-item
  display flex
  

.work-item-text
  h4
    color: #373737
    font-family:fbh
    font-size: 35px
  p
    color: #878787
    font-family:fo
    font-size: 22px
    line-height: 30px
    margin-top 20px
  
  